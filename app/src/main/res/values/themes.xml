<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.EKYC" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/white</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:windowLightStatusBar" tools:ignore="NewApi">true</item>
        <item name="android:textViewStyle">@style/BaseTextViewStyle</item>
    </style>

    <style name="BaseTextViewStyle" parent="android:Widget.TextView">
        <item name="android:textColor">@color/neutral_1</item>
        <item name="android:fontFamily">@font/nunito</item>
    </style>

    <style name="DarkTheme" parent="Theme.EKYC">
        <item name="android:windowBackground">@color/black</item>
    </style>
</resources>